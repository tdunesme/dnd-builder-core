generator client {
  provider     = "prisma-client"
  output       = "../src/generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "sqlite"
}

// User
model User {
  id           String      @id @default(cuid())
  email        String      @unique
  passwordHash String
  firstName    String
  lastName     String
  characters   Character[]
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
}

// Character
enum CharacterStatus {
  DRAFT
  ACTIVE
}

model Character {
  id     String          @id @default(uuid())
  name   String?
  status CharacterStatus @default(DRAFT)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId String

  level Int @default(1)

  speciesKey String?

  classKey String?

  backgroundKey String?

  abilityScores Json?
  abilityMethod String?

  equipment Json?

  spells Json?

  notes        Json?
  user         User        @relation(fields: [userId], references: [id])
  species      Species?    @relation(fields: [speciesId], references: [id])
  speciesId    Int?
  background   Background? @relation(fields: [backgroundId], references: [id])
  backgroundId Int?
  class        Class?      @relation(fields: [classId], references: [id])
  classId      Int?

  @@index([userId])
}

model Species {
  id  Int    @id @default(autoincrement())
  key String @unique

  name        String
  description String?

  creatureType String
  size         String
  speed        Int
  sizeOptions  Json?

  traits Json?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  characters Character[]
}

model Background {
  id          Int     @id @default(autoincrement())
  key         String  @unique
  name        String
  description String?

  abilityScores Json

  originFeatKey String

  skillProficiencies Json

  toolProficiency Json

  equipmentOptions Json

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  characters Character[]
}

model Class {
  id          Int    @id @default(autoincrement())
  key         String @unique
  name        String
  description String

  hitDie Int

  primaryAbilities Json

  savingThrows Json

  armorProficiencies Json

  weaponProficiencies Json

  toolProficiencies Json

  skillChoices Json

  equipmentOptions Json

  hasSpellcasting  Boolean @default(false)
  spellcastingType String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  characters Character[]
  levels     ClassLevel[]
}

model ClassLevel {
  id      Int @id @default(autoincrement())
  classId Int
  level   Int

  proficiencyBonus Int

  features Json

  progression Json?

  class Class @relation(fields: [classId], references: [id])

  @@unique([classId, level])
}

model Spell {
  id             Int      @id @default(autoincrement())
  key            String   @unique
  name           String
  level          Int
  school         String
  source         String?
  castingTime    String
  range          String
  components     String
  duration       String
  classes        String
  description    String
  atHigherLevels String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@index([level])
  @@index([school])
}

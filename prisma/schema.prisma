generator client {
  provider     = "prisma-client"
  output       = "../src/generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "sqlite"
}

// User
model User {
  id           String      @id @default(cuid())
  email        String      @unique
  passwordHash String
  characters   Character[]
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
}

// Character
model Character {
  id    Int    @id @default(autoincrement())
  name  String
  level Int    @default(1)

  ownerId String
  owner   User   @relation(fields: [ownerId], references: [id], onDelete: Cascade)

  speciesId Int?
  species   Species? @relation(fields: [speciesId], references: [id])

  classId Int?
  class   Class? @relation(fields: [classId], references: [id])

  backgroundId Int?
  background   Background? @relation(fields: [backgroundId], references: [id])
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt

  @@index([ownerId])
}

model Species {
  id           Int    @id @default(autoincrement())
  key          String @unique
  name         String
  creatureType String
  size         String
  speed        Int

  sizeOptions Json?

  traits Json?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  characters Character[]
}

model Background {
  id   Int    @id @default(autoincrement())
  key  String @unique
  name String

  abilityScores Json

  originFeatKey String

  skillProficiencies Json

  toolProficiency Json

  equipmentOptions Json

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  characters Character[]
}

model Class {
  id   Int    @id @default(autoincrement())
  key  String @unique
  name String

  hitDie Int

  primaryAbilities Json

  savingThrows Json

  armorProficiencies Json

  weaponProficiencies Json

  toolProficiencies Json

  skillChoices Json

  equipmentOptions Json

  hasSpellcasting  Boolean @default(false)
  spellcastingType String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  characters Character[]
  levels     ClassLevel[]
}

model ClassLevel {
  id      Int @id @default(autoincrement())
  classId Int
  level   Int

  proficiencyBonus Int

  features Json

  progression Json?

  class Class @relation(fields: [classId], references: [id])

  @@unique([classId, level])
}
